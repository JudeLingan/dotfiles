super + Escape
	pkill -USR1 -x sxhkd

# XF86 keys
XF86MonBrightness{Down,Up}
	brightnessctl s 5%{-,+}

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Lower,Raise}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

super + shift + Return
	alacritty

super + p
	rofi -show drun

# dwm

super + Return
	dwmc zoom

super + {d,i}
	dwmc incnmaster {-,+}1

super + {k,j}
	dwmc focusstack {-,+}1

super + {h,l}
	dwmc setmfact {-,+}0.05

super + shift + space
	dwmc togglefloating

super + f
	dwmc togglefullscr

super + shift + c
	dwmc killclient

super + shift + {q,r}
	dwmc quit {0,1}

super + {c,t,m,space}
	dwmc setlayoutex {0,1,2,3}

super + {_,ctrl +}{_,shift +}{1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

super + 0
	dwmc viewall

super + {minus,equal}
	dwmc setgaps {-,+}2

super + shift + {minus,equal}
	dwmc setgaps {0, 100}

super + b
	dwmc togglebar
